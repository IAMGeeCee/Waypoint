@{
    ViewData["Title"] = "Waypoint Maps";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Jost:wght@400;500;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Jost', sans-serif;
        color: white;
        margin: 0px;
        background: black;
    }

    a {
        text-decoration: none !important;
        color: white;
        background: linear-gradient(157deg, rgb(58, 4, 85), rgb(17, 3, 71));
        padding: 10px;
        border-radius: 10px;
        width: 100px;
        display: inline-block;
    }

    .gradientbox {
        background: rgb(58, 4, 85);
        background: linear-gradient(157deg, rgba(58, 4, 85, 1) 0%, rgba(17, 3, 71, 1) 27%, rgba(0, 0, 0, 1) 63%);
        width: 100%;
        height: 600px;
        margin: 0px !important;
    }

    .content {
        position: absolute;
        left: 0px;
        top: 0px;
        text-align: center;
        width: 100%;
    }

    h1 {
        margin-top: 500px;
        font-weight: 700;
        font-size: 100px;
        margin-bottom: 0px;;
    }
</style>

<body>
    <div class="gradientbox">
    </div>

    <div class="content">
        <h1>Waypoint</h1>
        <h2>More than a map</h2>
        <a href="/App">App</a>
    </div>
</body>