@{
    ViewData["Title"] = "Waypoint Maps";
}
<!DOCTYPE html>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Jost:wght@400;500;700&display=swap" rel="stylesheet">

<style>
    body {
        background: black;
        margin: 0px;
    }

    .gradientbox {
        background: rgb(58, 4, 85);
        background: linear-gradient(157deg, rgba(58, 4, 85, 1) 0%, rgba(17, 3, 71, 1) 27%, rgba(0, 0, 0, 1) 63%);
        width: 100%;
        height: 600px;
        margin: 0px !important;
        position: fixed;
        z-index: -500;
    }

    .headcontnet {
        text-align: center;
        width: 100%;
        height: 100%;
    }


    #title {
        width: 299px;
        height: 92px;
        flex-shrink: 0;
        color: #FFF;
        text-align: center;
        font-family: Jost;
        font-size: 64px;
        font-style: normal;
        font-weight: 700;
        line-height: normal;
    }

    #subhead {
        width: 276px;
        height: 114px;
        flex-shrink: 0;
        color: #FFF;
        text-align: center;
        font-family: Jost;
        font-size: 24px;
        font-style: normal;
        font-weight: 700;
        line-height: normal;
        margin-bottom: 500px;
    }

    #letsgobtn1 {
        color: #FFF;
        text-align: center;
        font-family: Jost;
        font-size: 32px;
        font-style: normal;
        font-weight: 700;
        line-height: normal;
        text-decoration: none;
        position: absolute;
        top: 100%;
        right: 50%;
        transform: translate(50%, -400%);
    }

    .centerdiv {
        position: absolute;
        top: 50%;
        right: 50%;
        transform: translate(50%, -50%);
    }
</style>

<body>
    <div class="gradientbox">
    </div>

    <div class="headcontnet">

        <div class="centerdiv">
            <span id="title">Waypoint</span>
            <br>
            <span id="subhead">More than a map</span>
        </div>

        <a href="/App" id="letsgobtn1">Let's Go!</a>
    </div>
</body>