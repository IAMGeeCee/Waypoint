<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        .content {
            width: 100%;
            height: 100%;
            background:#fff;
        }

        .sidebar {
            width: 150px;
            height: 100%;
            float: left;
            padding-top: 15px;
            background-color: #282a35;
        }

        a {
            color: white;
            text-align: center;
            width: 100%;
            display: block;
            margin: 0px;
            border: none;
        }

        i {
            font-size: 30px;
        }
    </style>
</head>

<body>
    <div class="sidebar">
        <a href="/App/Index"><i class="fas fa-home"></i><br> Home</a>
        <br>
        <a href="/App/Map"><i class="fas fa-map"></i><br> Map</a>
        <br>
        <a href="/App/History"><i class="fas fa-clock"></i><br> History</a>
        <br>
        <a href="/App/Car"><i class="fas fa-car"></i><br> Your Car</a>
        <br>
        <a href="/App/Settings"><i class="fas fa-cog"></i><br> Settings</a>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
